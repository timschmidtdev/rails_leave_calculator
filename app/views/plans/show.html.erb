<h1>
  <%= @plan.plan_type %> <br>
  <small>
    Created <%= @plan.created_at.strftime("%B %d, %Y") %>
  </small>
</h1>

<div class="row">
  <div class="col-md-8">
    <p>Start Date: <%= @plan.start %></p>
  </div>
  <div class="col-md-8">
    <p>Length: <%= @plan.length %> <%= unit_of_measure(@plan.unit.to_i) %></p>
  </div>
  <div class="col-md-8">
    <p>End Date: <%= calculate_plan(@plan) %></p>
  </div>
  <div class="col-md-4">
    <%= link_to "Back to Plans", @plan.employee, class: 'btn btn-primary' %>
    <%= link_to "Edit", edit_employee_plan_path(@plan.employee, @plan), class: 'btn btn-success' %>
    <%= link_to "Delete Plan", [@plan.employee, @plan], method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this plan?'} %>
  </div>
</div>

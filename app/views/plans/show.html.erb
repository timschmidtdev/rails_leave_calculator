<h1><%= @plan.plan_type %></h1>

<div class="row">
  <div class="col-md-8">
    <p>Start Date: <%= @plan.start %></p>
  </div>
  <div class="col-md-8">
    <p>Length: <%= @plan.length %> <%= @plan.unit %></p>
  </div>
  <div class="col-md-8">
    <p>End Date: <%= @plan.start + @plan.length %></p>
  </div>
  <div class="col-md-4">
    <%= link_to "Edit", edit_plan_path(@plan), class: 'btn btn-success' %>
    <%= link_to "Delete Plan", @plan, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this plan?'} %>
  </div>
</div>
